@model Ginosis.Banat.MvcWebUI.Models.Mold.MoldAddViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/_LayoutPage2.cshtml";
}
@section PageScripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
<div class="card" id="newMoldForm">
    <div class="card-header bg-white header-elements-inline">
        <h5 class="card-title"><strong>Yeni Kalıp Tanımlama Sayfası</strong></h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Add", "Mold", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()


            <div class="form-group row">
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Adı</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.MoldName, new { @class = "form-control", @placeholder = "Adı", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.MoldName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Kodu</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.MoldCode, new { @class = "form-control", @placeholder = "Kodu", autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.MoldCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Açıklama</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.Mold.Description, new { @class = "form-control", @placeholder = "Açıklama", autocomplete = "off" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>

        }
    </div>
</div>


