@model Ginosis.Banat.MvcWebUI.Models.Mold.MoldUpdateViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<div class="card" id="updateMoldForm">
    <div class="card-header bg-white header-elements-inline">
        <h5 class="card-title"><strong>Kalıp Güncelleme Sayfası</strong></h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "Mold", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Adı</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.Mold.Name, new { @class = "form-control", @placeholder = "Adı" })
                            @Html.HiddenFor(x => x.Mold.Id)
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Kodu</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.Mold.Code, new { @class = "form-control", @placeholder = "Kodu" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    <div class="row">
                        <label class="col-md-3 col-form-label">Açıklama</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.Mold.Description, new { @class = "form-control", @placeholder = "Açıklama" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>

        }
    </div>
</div>


