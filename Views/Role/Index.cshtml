@model Ginosis.Banat.MvcWebUI.Models.Role.RoleListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<div class="card" id="newRoleForm">
    <div class="card-header bg-white header-elements-inline">
        <h5 class="card-title"><strong>Sisteme Kayıtlı Roller</strong></h5>
    </div>
    
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-responsive table-striped">
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th></th>
            </tr>
            @foreach (var item in Model.Roles)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a href="/Role/Delete?roleId=@item.Id" class="btn-sm btn-danger"><i class="fa fa-edit"></i> Sil </a></td>
                </tr>
            }
        </table>

        <a href="/Role/Add" class="btn btn-success">Yeni Rol Ekle</a>

    </div>

</div>

