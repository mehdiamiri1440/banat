@model Ginosis.Banat.MvcWebUI.Models.Shift.ShiftListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<div class="card" id="newRoleForm">
    <div class="card-header bg-white header-elements-inline">
        <h5 class="card-title"><strong>Sisteme Kayıtlı Vardiyalar</strong></h5>
    </div>
    <div class="card-body">

     

            <table class="table datatable-basic" id="shiftList">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Vardiya Adı</th>
                        <th>Başlangıç Saati</th>
                        <th>Bitiş Saati</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.VardiyaListesi)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.StartTime</td>
                            <td>@item.FinishTime</td>
                            <td class="text-center">
                                <div class="list-icons">
                                    <div class="dropdown">
                                        <a href="#" class="list-icons-item" data-toggle="dropdown" aria-expanded="false">
                                            <i class="icon-menu9"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(22px, 19px, 0px);">
                                            <a href="/Shift/Update?ShiftId=@item.Id" class="dropdown-item"><i class="icon-pencil"></i>Güncelle</a>
                                            <a href="/Shift/Delete?ShiftId=@item.Id" class="dropdown-item"><i class="icon-cross2"></i>Sil</a>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
       
    </div>
</div>

@section PageScripts{
    <script>


            window.addEventListener('DOMContentLoaded', (event) => {
                $.extend($.fn.dataTable.defaults, {
                    columnDefs: [{
                        orderable: false,
                        width: 100,
                        targets: [4]
                    }],

                });
                $('#shiftList').DataTable({
                    "language": {
                        "url": "/Scripts/dil.json"
                    }
                });
            })
    </script>
}