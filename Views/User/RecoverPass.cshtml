@model Ginosis.Banat.MvcWebUI.Models.User.UserInfoViewModel
@{
    ViewBag.Title = "RecoverPass";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

@section PageScripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#resetPass').click(function () {
                var model = {
                    UserName: $('#UserName').val()
                }
                $.ajax({
                    type: 'POST',
                    url: '/User/RecoverPass',
                    data: model,
                    async: false,
                    success: successAjaxResultFunc,
                    error: errorAjaxResultFunc
                });
            })
        })



        function successAjaxResultFunc(result, status) {
            console.log(result);
            console.log(status);
            if (result.ReturnCode === 0) {
                swal({
                    title: 'Onay',
                    text: result.ReturnMessage,
                    type: 'success',
                    showCancelButton: false,
                    buttonsStyling: false,
                    confirmButtonClass: 'btn btn-primary',
                    confirmButtonText: 'Tamam',
                    reverseButtons: true
                });
            }
            else {
                swal({
                    title: 'Hata',
                    text: result.ReturnMessage,
                    type: 'error'
                });
            }

        }
        function errorAjaxResultFunc(result, status) {

            console.log(result);
            console.log(status);
            swal({
                title: 'Hata',
                text: 'İşlem Yapılamadı! Sistem Yöneticinize İletiniz.',
                type: 'error'
            });
        }



    </script>
}
<div class="card" id="newMoldForm">
    <div class="card-header bg-white header-elements-inline">
        <h5 class="card-title"><strong>Kullanıcı Şifre Sıfırlama Sayfası</strong></h5>
    </div>
    <div class="card-body">

        <div class="form-group row">
            <div class="col-lg-4">
                <div class="row">
                    <label class="col-md-3 col-form-label">Kullanıcı Adı</label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı Adı", autocomplete = "off", @id = "UserName", @name = "UserName" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="text-right">
                <button type="button" class="btn btn-primary" id="resetPass">Parolayı Sıfırla</button>
            </div>


        </div>
    </div>
</div>
